// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/rust
{
  "name": "Rust",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  //"image": "mcr.microsoft.com/devcontainers/rust:1-1-bullseye",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "GitHub.copilot-chat",
        "rust-lang.rust-analyzer",
        "swellaby.rust-pack",
        "vadimcn.vscode-lldb",
        "EditorConfig.EditorConfig",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "containerEnv": {
    // "RUSTUP_HOME": "/usr/local/rustup",
    // "CARGO_HOME": "/usr/local/cargo",
    // "CARGO_TARGET_DIR": "/usr/local/cargo-target",
    // "RUSTFLAGS": "-C target-feature=-crt-static"
    "HTTP_PROXY": "${localEnv:HTTP_PROXY}",
    "HTTPS_PROXY": "${localEnv:HTTPS_PROXY}",
    "NO_PROXY": "${localEnv:NO_PROXY}"
  },

  // "mounts": [
  //   {
  //     "type": "bind",
  //     "source": "${localEnv:HOME}",
  //     "target": "/workspace/home"
  //   }
  // ],

  "forwardPorts": [8080],
  "postCreateCommand": "rustup toolchain install stable-x86_64-unknown-linux-gnu && rustup component add rust-analysis --toolchain stable-x86_64-unknown-linux-gnu rust-src rustfmt clippy",
  "remoteUser": "root"

  // Use 'mounts' to make the cargo cache persistent in a Docker Volume.
  // "mounts": [
  // 	{
  // 		"source": "devcontainer-cargo-cache-${devcontainerId}",
  // 		"target": "/usr/local/cargo",
  // 		"type": "volume"
  // 	}
  // ]

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "rustc --version",

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
